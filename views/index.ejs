<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Table Example</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #d9d9d9;
      color: rgb(0, 0, 0);
    }

    @page {
      size: A4;
      margin: 5;
    }

    body {
      margin: 0;
    }

    .header {
      width: 100%;
      height: 100px;
      background-image: url('http://localhost:3000/img/VicaimaHeader.jpg');
      background-size: cover;
      background-position: center;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

    .header-text {
      color: white;
      font-size: 18px;
    }
  </style>
</head>

<body>
  <div class="header">
    <div class="header-text">
      DEKORDORÂ® SHD
      <br>
      STOCK OFF
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>SAP Code</th>
        <th>Description</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% if (data && data.row) { %>
        <% data.row.forEach(item=> { %>
          <tr>
            <td>
              <%= item.sap_code %>
            </td>
            <td>
              <%= item.description %>
            </td>
            <td>
              <%= item.quantity %>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>
  <a href="/download-pdf" target="_blank">Download PDF</a>
  <a href="/upload-pdf" target="_blank">Upload PDF to FTP</a>
</body>

</html>
